{
    "manifest_version": 3,
    "name": "Yad2 Ad Bumper",
    "version": "1.0",
    "description": "Automatically clicks the bump button on your Yad2 ads.",
    "permissions": [
        "scripting",
        "tabs",
        "activeTab",
        "alarms"
    ],
    "host_permissions": [
        "https://www.yad2.co.il/my-ads"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Yad2 Ad Bumper"
    }
}